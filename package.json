{
  "name": "@tanay-pingalkar/runner",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "bin": {
    "run": "./bin/run",
    "runner": "./bin/runner",
    "@tanay-pingalkar/runner": "./bin/runner"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsc -w",
    "compile": "tsc",
    "runner": "cd examples && run",
    "format": " npx prettier --write . && npx prettier --check .",
    "test": "jest --silent",
    "test-pro": "jest --watch --coverage",
    "test-cover": "jest --coverage",
    "lint": "npx eslint ./src && npx eslint ./src --fix",
    "ready": "npm run format && npm run lint && npm run test",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run ready && git add -A"
    }
  },
  "keywords": [
    "run",
    "runner"
  ],
  "author": "tanay pingalkar",
  "license": "ISC",
  "dependencies": {
    "@octokit/core": "^3.3.2",
    "chalk": "^4.1.0",
    "concurrently": "^6.0.0",
    "cowsay": "^1.1.1",
    "esm": "^3.2.25",
    "husky": "^6.0.0",
    "ora": "^5.4.0",
    "spawn-command": "^0.0.2-1",
    "terminal-kit": "^2.0.7"
  },
  "devDependencies": {
    "@types/concurrently": "^6.0.1",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.35",
    "@types/terminal-kit": "^1.28.2",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "jest": "^26.6.3",
    "prettier": "2.2.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  }
}
